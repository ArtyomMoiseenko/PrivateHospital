@using PrivateHospital.Models

@model IEnumerable<SpecializationModel>

@{
    ViewBag.Title = "Отделения";
}

<h2>Отделения в клинике</h2>

<table class="table">
    <tr>
        <th>Название отделения</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        foreach (SpecializationModel specialization in Model)
        {
            <tr>
                <td>@specialization.NameSpecialization</td>
                <td>@specialization.Description</td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", "Specialization", new { id = @specialization.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Удалить", "Delete", "Specialization", new { id = @specialization.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Изменить", "Edit", "Specialization", new { id = @specialization.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
</table>
@Html.ActionLink("Добавить", "Add", "Specialization", new { @class = "btn btn-default" })
