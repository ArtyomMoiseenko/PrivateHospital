@using PrivateHospital.Models

@model SpecializationModel

@{
    ViewBag.Title = "Отделение";
}
<h2>Информация об отделении</h2>
<table class="table">
    <tr>
        <th>Название отделения</th>
        <th>Описание</th>
        <th>Стоимость первичного осмотра</th>
        <th>Стоимость вторичного осмотра</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        <tr>
            <td>@Model.NameSpecialization</td>
            <td>@Model.Description</td>
            <td>@Model.PrimaryCost</td>
            <td>@Model.SecondaryCost</td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Specialization", new { id = @Model.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Изменить", "Edit", "Specialization", new { id = @Model.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
<br>
@Html.ActionLink("Назад", "Index", "Specialization", new { @class = "btn btn-default" })
