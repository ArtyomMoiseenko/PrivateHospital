@using PrivateHospital.Models

@model IEnumerable<ServiceModel>

@{
    ViewBag.Title = "Услуги";
}

<h2>Услуги в клинике</h2>

<table class="table">
    <tr>
        <th>Название сервиса</th>
        <th>Описание</th>
        <th>Стоимость</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        foreach (ServiceModel service in Model)
        {
            <tr>
                <td>@service.NameService</td>
                <td>@service.Description</td>
                <td>@(service.Cost - (service.Discount * service.Cost / 100))</td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", "Service", new { id = @service.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Удалить", "Delete", "Service", new { id = @service.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Изменить", "Edit", "Service", new { id = @service.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
</table>
@Html.ActionLink("Добавить", "Add", "Service", new { @class = "btn btn-default" })
