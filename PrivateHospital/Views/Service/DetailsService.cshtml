@using PrivateHospital.Models

@model ServiceModel

@{
    ViewBag.Title = "Услуга";
}

<h2>Услуга</h2>

<table class="table">
    <tr>
        <th>Название сервиса</th>
        <th>Описание</th>
        <th>Стоимость</th>
        <th>Стоимость со скидкой</th>
        <th>Скидка</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        <tr>
            <td>@Model.NameService</td>
            <td>@Model.Description</td>
            <td>@Model.Cost</td>
            <td>@(Model.Cost - (Model.Discount * Model.Cost / 100))</td>
            <td>@Model.Discount</td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Service", new { id = @Model.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Изменить", "Edit", "Service", new { id = @Model.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Назад", "Index", "Service", new { @class = "btn btn-default" })
