@using PrivateHospital.Models

@model IEnumerable<ClientModel>

@{
    ViewBag.Title = "Клиенты";
}

<h2>Клиенты</h2>

<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Адрес</th>
        <th>Номер телефона</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        foreach (ClientModel client in Model)
        {
            <tr>
                <td>@client.LastName</td>
                <td>@client.FirstName</td>
                <td>@client.MiddleName</td>
                <td>@client.Address</td>
                <td>@client.Phone</td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", "Client", new { id = @client.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Удалить", "Delete", "Client", new { id = @client.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Изменить", "Edit", "Client", new { id = @client.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
</table>
@Html.ActionLink("Добавить", "Add", "Client", new { @class = "btn btn-default" })
